<!doctype html>
<head>
  <!-- metas -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta http-equiv="cleartype"       content="on">
  <meta name="description"           content="<%= I18n.t(:description) %>">
  <meta name="keywords"              content="<%= I18n.t(:keywords) %>">
  
  <!-- facebook metatags -->
  <meta property="fb:app_id"      content="<%= data.app.facebook_tags.app_id %>" />
  <meta property="og:type"        content="<%= data.app.facebook_tags.type %>" />
  <meta property="og:title"       content="<%= data.app.facebook_tags.title %>" />
  <meta property="og:image"       content="<%= data.app.facebook_tags.image %>" />
  <meta property="og:description" content="<%= data.app.facebook_tags.description %>" />
  <meta property="og:url"         content="<%= data.app.facebook_tags.url %>" />

  <!-- icons -->
  <link rel="shortcut icon" href="<%= data.app.assets.favicon %>">
  
  <!-- stylesheet -->
  <%= stylesheet_link_tag 'pages/' + path_assets %>
  
  <!-- javascript: head -->
  <%= javascript_include_tag 'head' %>

  <!-- title -->
  <title><%= I18n.t(:title) %></title>
  
  <%= yield_content :assets %>
</head>

<!-- body
========================================================================================================= /// -->
<body class="<%= page_classes %>">

<!-- Header -->
<%= partial "shared/header" %>

<hr>
  
<!-- wrapper
========================================================================================================= /// -->
<div class="wrapper">
  <%= yield %>
</div>

<hr>

<!-- Footer -->
<%= partial "shared/footer" %>


<!-- javascripts
========================================================================================================= /// -->
<%= javascript_include_tag 'pages/' + path_assets %>  
<script>EURODANCECOMBR.config = <%= data.app.to_json %>;</script>
</body>
</html>